{
  "scripts": {
    "src": {
      "files": "src/scripts/**/*.js",
      "entry": "src/scripts/index.js"
    },
    "dist": {
      "root": "dist/scripts/",
      "filename": "scripts.min.js"
    }
  },
  "templates": {
    "src": {
      "files": [
        "src/templates/**/*.pug"
      ],
      "exclude": [
        "!src/templates/layouts/**/*.pug",
        "!src/templates/components/**/*.pug"
      ]
    },
    "dist": {
      "root": "dist/",
      "files": "dist/**/*.html"
    }
  },
  "styles": {
    "src": {
      "files": "src/styles/**/*.styl"
    },
    "dist": {
      "root": "dist/styles",
      "file": "dist/styles/styles.min.css",
      "filename": "styles.min.css"
    }
  },
  "images": {
    "src": {
      "files": "src/images/**/*.*"
    },
    "dist": {
      "root": "dist/images"
    }
  },
  "data": {
    "src": {
      "files": "src/data/**/*.*"
    },
    "dist": {
      "root": "dist/data"
    }
  },
  "environments": {
    "source": {
      "root": "environments"
    },
    "dist": {
      "root": "dist/scripts",
      "filename": "environment.min.js"
    }
  }
}

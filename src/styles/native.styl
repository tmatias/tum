@require '_variables'
@require '_mixins'
@require 'footer'

html,
body
  margin 0
  color $color-darkest
  font-size $font-size-sm
  font-family $font-family-primary

body
  position relative
  padding 0 0 $footer-height
  min-height 100vh
  box-sizing(border-box)

h1, h2, h3, h4, h5, h6
  margin 0 0 40px
  color $color-grey-dark
  font-family $font-family-secondary
  font-weight 500
  text-transform uppercase

h1
  font-size $font-size-xs

p
  margin 0
  font-size $font-size-md
  line-height 1.75
  & + p
    margin-top 30px
  a,
  span
    &:not(:first-child)
      margin-left 0

a
  display inline-block
  color $color-grey-dark
  text-decoration none
  transition(all, 300ms)
  &:hover,
  &:focus,
  &:active
    color $color-blue

input,
textarea,
button
  font-size $font-size-sm
  -webkit-appearance none
  border-radius(3px)
  box-sizing(border-box)
  &:focus,
  &:active
    outline 0

input,
button
  line-height 30px

input,
textarea
  padding 0 5px
  width 100%
  font-family font-family-secondary
  border 1px solid $color-grey
  &:focus,
  &:active
    border 1px solid $color-blue

input
  line-height 42px

placeholder($color-grey)

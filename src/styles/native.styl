@require '_variables'
@require '_mixins'

html,
body
  margin 0
  padding 0
  color $color-darkest
  font-size $font-size-sm
  font-family $font-family-primary

p
  margin 0
  line-height 1.5
  & + p
    margin-top 15px

a
  display inline-block
  color $color-blue
  text-decoration none
  transition(all, 300ms)
  &:hover,
  &:focus,
  &:active
    color $color-blue

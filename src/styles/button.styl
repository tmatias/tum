@import '_variables'
@import '_mixins'

.button
  padding 10px
  background-color transparent
  color $color-grey-dark
  text-align center
  text-transform uppercase
  border-width 2px
  border-style solid
  border-color $color-grey
  cursor pointer
  transition(all, 300ms)
  &:hover,
  &:focus,
  &:active
    background-color $color-blue
    color $color-lightest
    border-color $color-blue
  &.button-block
    width 100%

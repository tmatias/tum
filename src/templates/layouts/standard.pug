include ../components/viewport.pug

doctype
html
  head
    meta(http-equiv="Content-Type" content="text/html; charset=UTF-8")
    meta(name="viewport" content="width=device-width, initial-scale=1, user-scalable=no")
    meta(name="description" content="The unserious manifest is a short piece of text written by Rafael Camargo just to tell you the importance of non taking life seriously.")
    meta(name="keywords" content="unserious, manifest, Rafael Camargo")
    meta(name="apple-mobile-web-app-status-bar-style" content="black-translucent")
    meta(name="apple-mobile-web-app-capable" content="yes")
    meta(http-equiv="cache-control" content="no-cache")
    meta(http-equiv="cache-control" content="max-age=0")
    meta(http-equiv="expires" content="0")
    meta(http-equiv="expires" content="Tue, 01 Jan 1980 1:00:00 GMT")
    meta(http-equiv="pragma" content="no-cache")
    meta(name="robots" content="index, follow")
    meta(name="googlebot" content="index, follow")
    link(rel="icon" href="images/favicon_32x32.png?@@fingerprint" type="image/x-icon")
    link(rel="stylesheet" href="https://fonts.googleapis.com/css?family=Amiri")
    link(rel="stylesheet" type="text/css" href="./styles/styles.min.css?@@fingerprint")
    title The Unserious Manifest
  body
    +viewport()
      block content

include ./form-group.pug

mixin sign-form
  .sign-form
    h1 Sign
    #mc_embed_signup
      form#mc-embedded-subscribe-form.validate(action="https://theunseriousmanifest.us17.list-manage.com/subscribe/post?u=efab485add1235157d2af1ed5&id=62de1adeb5", method="post", name="mc-embedded-subscribe-form", target="_blank", novalidate="")
        #mc_embed_signup_scroll
          +form-group()
            label(for="mce-EMAIL") Email Address  
            input#mce-EMAIL.required.email(type="email", value="", name="EMAIL" placeholder="your@email.com")
          +form-group()
            label(for="mce-FNAME") First Name 
            input#mce-FNAME(type="text", value="", name="FNAME" placeholder="Your first name")
          +form-group()
            label(for="mce-LNAME") Last Name 
            input#mce-LNAME(type="text", value="", name="LNAME" placeholder="Your last name")
          +form-group()
            label(for="mce-MMERGE3") Social Link (optional)
            input#mce-MMERGE3.url(type="url", value="", name="MMERGE3" placeholder="e.g.: twitter.com/your_username")
          #mce-responses.clear
            #mce-error-response.response(style="display:none")
            #mce-success-response.response(style="display:none")
          //- real people should not fill this in and expect good things - do not remove this or risk form bot signups
          div(style="position: absolute; left: -5000px;", aria-hidden="true")
            input(type="text", name="b_efab485add1235157d2af1ed5_62de1adeb5", tabindex="-1", value="")
          +form-group()
            .clear
              button#mc-embedded-subscribe.button(type="submit", name="subscribe") Get Me In
